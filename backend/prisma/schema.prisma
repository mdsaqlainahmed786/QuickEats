generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid())
  userName     String
  email        String     @unique
  phoneNumber  String
  isVerified   Boolean    @default(false)
  password     String
  otp          String?
  otpExpiresAt DateTime? 
  address      String?
  cartItems    CartItem[]
  createdAt    DateTime   @default(now())
}

model Dish {
  id          String     @id @default(uuid())
  title       String
  description String
  category    String
  price       Int
  image       String?
  cartItems   CartItem[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model CartItem {
  id        String   @id @default(uuid())
  dish      Dish     @relation(fields: [dishId], references: [id])
  dishId    String
  quantity  Int      @default(1)
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
